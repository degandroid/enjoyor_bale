<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line"
    android:orientation="vertical">

    <include layout="@layout/navigationbar_layout"></include>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/myphone_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/myphone_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="18dp"
                        android:src="@mipmap/bl_icon_key" />

                    <EditText
                        android:id="@+id/myphone_et_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/myphone_key"
                        android:background="@null"
                        android:hint="请输入原手机验证码"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/myphone_accesnum"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:gravity="end"
                        android:text="获取验证码" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="15dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_toLeftOf="@id/myphone_accesnum"
                        android:background="@color/color_line">

                    </View>
                </RelativeLayout>

                <View
                    android:id="@+id/myphone_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/myphone_top"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_line">

                </View>

                <RelativeLayout
                    android:id="@+id/myphone_mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myphone_line">

                    <ImageView
                        android:id="@+id/myphone_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="18dp"
                        android:src="@mipmap/shouji" />

                    <EditText
                        android:id="@+id/myphone_et_newphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/myphone_phone"
                        android:background="@null"
                        android:hint="输入新手机号码"
                        android:singleLine="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/myphone_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/myphone_mid"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_line">

                </View>

                <RelativeLayout
                    android:id="@+id/myphone_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myphone_line1">

                    <ImageView
                        android:id="@+id/myphone_key_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="18dp"
                        android:src="@mipmap/bl_icon_key" />

                    <EditText
                        android:id="@+id/myphone_et_againnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/myphone_key_bottom"
                        android:background="@null"
                        android:hint="请输入新手机验证码"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/myphone_acces"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:gravity="end"
                        android:text="获取验证码" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="15dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_toLeftOf="@id/myphone_acces"
                        android:background="@color/color_line">

                    </View>
                </RelativeLayout>

                <View
                    android:id="@+id/myphone_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/myphone_bottom"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_line">
                </View>
                <Button
                    android:id="@+id/myphone_save"
                    style="@style/Button_style"
                    android:layout_below="@id/myphone_line2"
                    android:layout_marginTop="60dp"
                    android:text="保存" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
