<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroud"
        android:orientation="vertical">

        <include layout="@layout/navigationbar_layout"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="434px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/bl_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_distance"
            android:layout_marginRight="@dimen/layout_distance"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/regist_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15sp"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="15sp"
                    android:paddingTop="20sp"
                    android:src="@mipmap/bl_icon_phone" />

                <EditText
                    android:id="@+id/registphonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/regist_phone"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_largetittle" />

                <ImageView
                    android:id="@+id/regist_phone_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/bl_icon_deldte"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorBlack">

            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_distance"
            android:layout_marginRight="@dimen/layout_distance"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/regist_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15sp"
                    android:paddingRight="15sp"
                    android:paddingTop="20sp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/bl_icon_lock" />

                <EditText
                    android:id="@+id/regist_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/regist_key"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_largetittle" />

                <ImageView
                    android:id="@+id/regist_pwd_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/bl_icon_deldte"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorBlack">

            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_distance"
            android:layout_marginRight="@dimen/layout_distance"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="15sp"
                    android:paddingRight="15sp"
                    android:paddingTop="20sp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/bl_icon_key" />

                <EditText
                    android:id="@+id/regist_tv_yanzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_largetittle" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/regist_yanzheng"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textSize="@dimen/textsize_largetittle" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30px"
                        android:layout_marginRight="25px"
                        android:layout_marginTop="30px"
                        android:layout_toLeftOf="@id/regist_yanzheng"
                        android:background="@color/colorBlack"></View>


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorBlack"></View>
        </LinearLayout>

        <Button
            android:id="@+id/regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_distance"
            android:layout_marginRight="@dimen/layout_distance"
            android:layout_marginTop="58px"
            android:background="@drawable/btn_solid_greedyellow_radius"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_largetittle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/regist_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_agreement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="我已阅读并认可" />

        <TextView
            android:id="@+id/regist_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="《芭乐软件服务协议》"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
