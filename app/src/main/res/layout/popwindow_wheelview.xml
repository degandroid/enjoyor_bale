<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:text="取消"
            android:background="@null"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/bt_commit"
            android:layout_width="wrap_content"
            android:text="确认"
            android:background="@null"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorBackgroud"
        android:layout_height="1px" />
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="200dp">
    <com.enjoyor.healthhouse.custom.WheelView
        android:id="@+id/wv_year"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:itemNumber="4"
        app:lineColor="@color/textcolor_largetittle"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/textcolor_smallittle"
        app:normalTextSize="@dimen/textsize_smalltittle"
        app:selectedTextColor="@color/colorBlack"
        app:selectedTextSize="@dimen/textsize_largetittle"
        app:unitHight="50dp"/>
    <com.enjoyor.healthhouse.custom.WheelView
        android:id="@+id/wv_mouth"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:itemNumber="4"
        app:lineColor="@color/textcolor_largetittle"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/textcolor_smallittle"
        app:normalTextSize="@dimen/textsize_smalltittle"
        app:selectedTextColor="@color/colorBlack"
        app:selectedTextSize="@dimen/textsize_largetittle"
        app:unitHight="50dp"/>
    <com.enjoyor.healthhouse.custom.WheelView
        android:id="@+id/wv_day"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:itemNumber="4"
        app:lineColor="@color/textcolor_largetittle"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/textcolor_smallittle"
        app:normalTextSize="@dimen/textsize_smalltittle"
        app:selectedTextColor="@color/colorBlack"
        app:selectedTextSize="@dimen/textsize_largetittle"
        app:unitHight="50dp"/>
</LinearLayout>


</LinearLayout>
