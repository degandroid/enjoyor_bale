<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/physicall_item_img"
                android:layout_width="100px"
                android:layout_height="100px"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/physicall_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="24px"
                android:layout_toRightOf="@id/physicall_item_img"
                android:text="杭州市西湖区三墩镇西园八路二号银江软件园门口"
                android:textColor="@color/textcolot_welcome" />

            <ImageView
                android:id="@+id/physicall_img_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/physicall_addr"
                android:layout_marginBottom="14px"
                android:layout_toRightOf="@id/physicall_item_img"
                android:src="@mipmap/weizhi" />

            <TextView
                android:id="@+id/physicall_kilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/physicall_addr"
                android:layout_marginBottom="14px"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/physicall_img_addr"
                android:gravity="center"
                android:text="200米"
                android:textColor="@color/textcolor_body" />

            <TextView
                android:id="@+id/gotophysicall"
                android:layout_width="140px"
                android:layout_height="50px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14px"
                android:background="@mipmap/qu_tijian"
                android:gravity="center"
                android:text="去体检"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
