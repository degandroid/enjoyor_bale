<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <include layout="@layout/navigationbar_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_distance"
        android:background="@mipmap/bl_bg_unselected"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/bl_bg_selected"
            android:gravity="center"
            android:text="列表"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/bt_curve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_null"
            android:gravity="center"
            android:text="曲线"
            android:textColor="@color/textcolor_body" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="收缩压/舒张压"
                android:textColor="@color/textcolor_smallittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/bl_icon_piangao"
                android:drawablePadding="5dp"
                android:text="偏高"
                android:textColor="@color/textcolor_smallittle"
                android:textSize="@dimen/textsize_smalltittle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="正常范围：90-140/60-90（mmol/L）"
                android:textColor="@color/textcolor_smallittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/bl_icon_piandi"
                android:drawablePadding="5dp"
                android:text="偏低"
                android:textColor="@color/textcolor_smallittle"
                android:textSize="@dimen/textsize_smalltittle" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_history_shengao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history_xueya"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_history_xuetang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="早餐"
                        android:textColor="@color/textcolor_smallittle"
                        android:textSize="@dimen/textsize_body" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="前"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/color_line" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="早餐"
                        android:textColor="@color/textcolor_smallittle"
                        android:textSize="@dimen/textsize_body" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="前"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/color_line" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="早餐"
                        android:textColor="@color/textcolor_smallittle"
                        android:textSize="@dimen/textsize_body" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="前"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/color_line" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后"
                            android:textColor="@color/textcolor_smallittle"
                            android:textSize="@dimen/textsize_body" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="睡前"
                android:textColor="@color/textcolor_largetittle"
                android:textSize="@dimen/textsize_smalltittle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bl_bg_wushuju" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_distance"
                android:gravity="center"
                android:text="我们的工程师们已经把表格准备好了，\n还不赶紧记录您的健康！" />
        </LinearLayout>

        <com.enjoyor.healthhouse.custom.BottomScrollView
            android:id="@+id/sv_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_addchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        </LinearLayout>
        </com.enjoyor.healthhouse.custom.BottomScrollView>
        <LinearLayout

            android:id="@+id/ll_addweb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
