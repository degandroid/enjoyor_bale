<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigationbar_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_distance">

        <LinearLayout

            android:background="@mipmap/xuanzekuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/fl_normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@mipmap/xuanzhong"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="健康数据" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_abnormal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_abnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/textcolor_body"
                android:text="异常项目" />
            <ImageView
                android:id="@+id/iv_info"
                android:layout_marginRight="90px"
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:src="@mipmap/yichang"/>
            </FrameLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:padding="@dimen/layout_distance"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hong"
            android:layout_width="wrap_content"
            android:src="@mipmap/bl_icon_hong"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="数据偏高"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_lan"
            android:paddingLeft="@dimen/layout_distance"
            android:layout_width="wrap_content"
            android:src="@mipmap/bl_icon_lan"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="数据偏低"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ab_text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:text="暂无异常"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/layout_distance"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="项目名称"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="结果"
                android:paddingRight="5dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_upanddown"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:src="@mipmap/bl_icon_lan"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_range"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="项目名称"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/sv_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_shengao"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
</LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/sv_abnormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_abnormal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        </LinearLayout>

    </ScrollView>
</LinearLayout>
