<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/communtity_bz"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/communtity_bz_tv"
                    style="@style/communtity_tab_text"
                    android:layout_centerInParent="true"
                    android:text="血脂" />

                <ImageView
                    android:id="@+id/communtity_bz_img"
                    style="@style/communtity_tab_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xuanzhong_com"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/communtity_bp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/communtity_bp_tv"
                    style="@style/communtity_tab_text"
                    android:layout_centerInParent="true"
                    android:text="血压" />

                <ImageView
                    android:id="@+id/communtity_bp_img"
                    style="@style/communtity_tab_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xuanzhong_com"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/communtity_lose"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/communtity_lose_tv"
                    style="@style/communtity_tab_text"
                    android:layout_centerInParent="true"
                    android:text="减肥" />

                <ImageView
                    android:id="@+id/communtity_lose_img"
                    style="@style/communtity_tab_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xuanzhong_com" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/communtity_bo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/communtity_bo_tv"
                    style="@style/communtity_tab_text"
                    android:layout_centerInParent="true"
                    android:text="血糖" />

                <ImageView
                    android:id="@+id/communtity_bo_img"
                    style="@style/communtity_tab_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xuanzhong_com"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/communtity_type"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/communtity_type_tv"
                    style="@style/communtity_tab_text"
                    android:layout_centerInParent="true"
                    android:text="健身" />

                <ImageView
                    android:id="@+id/communtity_type_img"
                    style="@style/communtity_tab_img"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/xuanzhong_com"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_line"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/communtity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
