<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line"
    android:orientation="vertical">

    <include layout="@layout/navigationbar_layout"></include>

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/modifypwd_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingBottom="5dp"
                android:id="@+id/modifypwd_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/bl_icon_key" />

            <EditText
                android:id="@+id/modifypwd_et_access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/modifypwd_key"
                android:background="@null"
                android:hint="输入验证码" />

            <TextView
                android:gravity="end"
                android:textSize="@dimen/textsize_smalltittle"
                android:id="@+id/modifypwd_accesnum"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="18dp"
                android:text="获取验证码" />

            <View
                android:layout_width="1px"
                android:layout_height="30px"
                android:layout_marginRight="18dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@id/modifypwd_accesnum"
                android:background="@color/color_line">

            </View>
        </RelativeLayout>

        <View
            android:layout_marginTop="5dp"
            android:id="@+id/modifypwd_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/modifypwd_top"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/color_line">

        </View>

        <RelativeLayout
            android:id="@+id/modifypwd_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modifypwd_line">

            <ImageView
                android:paddingBottom="5dp"
                android:id="@+id/modifypwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/suo" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/modifypwd_phone"
                android:background="@null"
                android:hint="请输入新密码" />
        </RelativeLayout>

        <View
            android:id="@+id/modifypwd_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/modifypwd_mid"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/color_line">

        </View>

        <RelativeLayout
            android:id="@+id/modifypwd_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modifypwd_line1">

            <ImageView
                android:paddingBottom="5dp"
                android:id="@+id/modifypwd_key_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/suo" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/modify_again_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/modifypwd_key_bottom"
                android:background="@null"
                android:hint="请再次输入密码" />

        </RelativeLayout>

        <View
            android:id="@+id/modifypwd_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/modifypwd_bottom"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/color_line">

        </View>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/modify_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/textsize_largetittle"
            android:textColor="@color/white"
            android:background="@color/colorGreenYellow"
            android:text="保存" />

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>
